<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAmountFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/back_ground2">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:id="@+id/img_back"
                android:src="@drawable/back_btn"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_back"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:text="Thursday,
                23rd August 2020"
                android:textColor="#513C3C"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_main_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="200dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edt_money"
                android:hint="Prizes (Yen)"
                android:inputType="phone"
                android:paddingLeft="25dp"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/edt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_main_money"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="150dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/insert_border_outcome"
                android:hint="Location"
                android:minHeight="48dp"
                android:paddingLeft="25dp"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/edt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_location"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/insert_border_outcome"
                android:hint="Put some detail (Optional)"
                android:minHeight="48dp"
                android:paddingLeft="25dp"
                android:textSize="15sp" />
            <CheckBox
                android:id="@+id/box_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_detail"
                android:layout_marginLeft="20dp"
                android:minHeight="48dp"
                android:text="@string/period"
                android:textSize="17sp" />
            <Button
                android:layout_below="@id/box_period"
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_check_outcome"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>